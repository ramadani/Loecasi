<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>

    <style name="GoogleButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_google_rounded</item>
        <item name="android:paddingStart">@dimen/normal_distance</item>
        <item name="android:paddingEnd">@dimen/normal_distance</item>
    </style>
</resources>
